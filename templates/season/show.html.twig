{% extends 'base.html.twig' %}

{% block title %}Season{% endblock %}

{% block body %}
    <h1>Season</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ season.id }}</td>
        </tr>
        <tr>
            <th>Year</th>
            <td>{{ season.year }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ season.description }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('season_index') }}">back to list</a>

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('season_edit', {'year': season.year}) }}">edit</a>
        {{ include('season/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
